<?xml version="1.0" encoding="UTF-8"?>
<package xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd" name="be.bastelstu.sascha.maelstrom.restrictreport">
	<packageinformation>
		<packagename><![CDATA[Restrict Reporting]]></packagename>
		<packagename language="de"><![CDATA[Melden beschränken]]></packagename>
		<packagedescription><![CDATA[Allows you to restrict reporting of contents]]></packagedescription>
		<packagedescription language="de"><![CDATA[Erlaubt Ihnen, das Melden von Inhalten zu beschränken]]></packagedescription>
		<version>1.0.2</version>
		<date>2014-01-28</date>
		<license><![CDATA[Creative Commons Attribution-NoDerivatives <http://creativecommons.org/licenses/by-nd/4.0/legalcode>]]></license>
	</packageinformation>
	
	<authorinformation>
		<author><![CDATA[Sascha Greuel]]></author>
		<authorurl><![CDATA[https://bastelstu.be/]]></authorurl>
	</authorinformation>
	
	<requiredpackages>
		<requiredpackage minversion="2.0.0">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.0.1" file="requirements/be.bastelstu.sascha.maelstrom.comcat.tar">be.bastelstu.sascha.maelstrom.comcat</requiredpackage>
	</requiredpackages>
	
	<instructions type="update" fromversion="1.0.*">	
		<!-- files -->
		<instruction type="file">file.tar</instruction>
		
		<!-- config -->
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		
		<!-- languages -->
		<instruction type="language">language/*.xml</instruction>
	</instructions>
	
	<instructions type="install">
		<!-- files -->
		<instruction type="file">file.tar</instruction>
		
		<!-- config -->
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="templateListener">templateListener.xml</instruction>
		
		<!-- languages -->
		<instruction type="language">language/*.xml</instruction>
	</instructions>
</package>
